{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "start": "nodemon",
    "start-react": "cd client && npm start",
    "serve-react": "ws --port 3000 --directory client/build --spa index.html --rewrite \"/api/(.*) -> http://127.0.0.1:3001/api/$1\"",
    "build": "cd client && npm run build",
    "tailwind": "cd client && npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "start-production": "concurrently \"npm run start\" \"npm run serve-react\"",
    "start-dev": "concurrently \"npm run start\" \"npm run start-react\" \"npm run tailwind\""
  },
  "keywords": [],
  "author": "Marcos Sousa",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "local-web-server": "^5.3.1",
    "mongodb": "^6.4.0",
    "nodemon": "^3.0.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2"
  }
}
